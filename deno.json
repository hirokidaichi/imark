{
  "tasks": {
    "dev": "deno run -A src/main.ts",
    "test": "deno test -A",
    "install": "deno install -A -f --global -n imark --config deno.json src/main.ts",
    "check": "deno check **/*.ts",
    "lint": "deno lint src/",
    "fmt": "deno fmt",
    "check-all": "deno task check && deno task lint && deno task fmt --check && deno task test",
    "imark": "deno run -A src/main.ts",
    "fix": "cat inst/test-fix.md | claude --workspace . --dangerously-skip-permissions",
    "fix-lint": "cat inst/test-lint-fix.md | claude --workspace . --dangerously-skip-permissions"
  },
  "imports": {
    "@cliffy/ansi": "jsr:@cliffy/ansi@^1.0.0-rc.7",
    "@cliffy/table": "jsr:@cliffy/table@^1.0.0-rc.7",
    "@google/generative-ai": "npm:@google/generative-ai@^0.22.0",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.6.1",
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@std/datetime": "jsr:@std/datetime@^0.225.3",
    "@std/encoding": "jsr:@std/encoding@^1.0.7",
    "@std/testing": "jsr:@std/testing@^1.0.9",
    "@std/fs": "jsr:@std/fs@^1.0.14",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.7",
    "@langchain/core": "npm:@langchain/core@^0.3.40",
    "@langchain/core/": "npm:@langchain/core@0.1.14/",
    "@langchain/google-genai": "npm:@langchain/google-genai@^0.1.8",
    "zod": "npm:zod@^3.24.2"
  },
  "fmt": {
    "include": [
      "src/"
    ],
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "compilerOptions": {
    "strict": true
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "require-await"
      ]
    }
  }
}